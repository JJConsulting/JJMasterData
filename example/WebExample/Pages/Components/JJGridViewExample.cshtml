@page

@using JJMasterData.Commons.Util
@using JJMasterData.Core.Web.Components
@using JJMasterData.Web.TagHelpers
@using JJMasterData.WebExample.Models

@functions {
    private void ConfigureGridView(JJGridView gridView)
    {
        gridView.FormElement.Title = "Example GridView";
    }
}

@{
    var dataList = new List<ExampleModel> { new("Foo", 1), new("Bar", 2) };

    var dataTable = EnumerableHelper.ConvertToDataTable(dataList);
}

<jj-grid-view datatable="dataTable" configure="ConfigureGridView" />