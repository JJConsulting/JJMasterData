@using JJConsulting.FontAwesome
@using JJMasterData.Web.TagHelpers
@model JJMasterData.Core.DataDictionary.Models.FormElementField
@inject IStringLocalizer<MasterDataResources> StringLocalizer

<div class="row">
    <div class="mb-3 col-sm-12">
        <expression for="DefaultValue" icon="FontAwesomeIcon.Check" use-floating-label="false"/>
    </div>
    <div class="mb-3 col-sm-12 required">
        <expression for="VisibleExpression" icon="FontAwesomeIcon.Eye" use-floating-label="false"/>
    </div>
    <div class="mb-3 col-sm-12 required">
        <expression for="EnableExpression" icon="FontAwesomeIcon.Pencil" use-floating-label="false"/>
    </div>
    <div class="mb-3 col-sm-12">
        <expression for="TriggerExpression" icon="FontAwesomeIcon.Bolt" use-floating-label="false"/>
    </div>
</div>
<div class="row">
    <span> <span class="fa fa-info-circle" style="color:#005a86"></span> @StringLocalizer["Read more about expressions "]<a target="_blank" href="https://md.jjconsulting.tech/articles/expressions.html">@StringLocalizer[" in this link."]</a></span>
</div>
