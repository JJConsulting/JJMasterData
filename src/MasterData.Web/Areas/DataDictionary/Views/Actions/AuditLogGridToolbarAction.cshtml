@inject IStringLocalizer<MasterDataResources> StringLocalizer
@using JJConsulting.FontAwesome
@using JJMasterData.Core.DataDictionary.Models
@model JJMasterData.Core.DataDictionary.Models.Actions.AuditLogGridToolbarAction

@{
    Layout = "_FormElementActionLayout";
    ViewData["FormAction"] = "AuditLogGridToolbarAction";
    ViewData["CopyAction"] = "CopyAuditLogGridToolbarAction";
    ViewData["FormRouteValues"] = new Dictionary<string, string?> { ["elementName"] = ViewData["ElementName"]?.ToString(), ["source"] = ViewData["ActionSource"]?.ToString() };
    FormElement formElement = ViewBag.FormElement;
}

@section ActionExtraContent {
    @if (!formElement.Options.EnableAuditLog)
    {
        <alert 
            title="@StringLocalizer["Warning"]" 
            message="@StringLocalizer["AuditLog is disabled at Options."]"
            color="Warning"
            icon="FontAwesomeIcon.SolidTriangleExclamation"
        />
    }
}
