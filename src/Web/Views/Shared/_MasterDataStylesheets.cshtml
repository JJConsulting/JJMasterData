@using JJMasterData.Core.Web
@using JJMasterData.Web.Options
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Options

@inject IOptions<JJMasterDataWebOptions> Options

<link rel="stylesheet preload prefetch" as="style" href="~/_content/JJMasterData.Web/css/fontawesome/all.min.css" />
<link rel="stylesheet preload prefetch" as="style" href="~/_content/JJMasterData.Web/css/fontawesome/v4-font-face.min.css" />
<link rel="stylesheet preload prefetch" as="style" href="~/_content/JJMasterData.Web/css/fontawesome/v4-shims.min.css" />

@switch (BootstrapHelper.Version)
{
    case 3:
        @if (!Options.Value.UseCustomBootstrap)
        {
            <link rel="Stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap3/bootstrap.min.css" />
            <link rel="Stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap3/bootstrap-theme.css?v=6" />
        }
        <link rel="Stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap-toggle/bootstrap-toggle.min.css" />
        <link rel="stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap-select/bootstrap-select.min.css" />
        break;
    case 4:
        @if (!Options.Value.UseCustomBootstrap)
        {
            <link rel="Stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap4/bootstrap.min.css"/>
        }
        <link rel="stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap-select/bootstrap-select.min.css" />
        <link rel="Stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap-toggle/bootstrap4-toggle.min.css" />
        break;
    default:
        @if (!Options.Value.UseCustomBootstrap)
        {
            <link rel="Stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap5/bootstrap.min.css"/>
        }
        <link rel="stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap-select/bootstrap-select-bs5.min.css" />
        <link rel="Stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap-toggle/bootstrap4-toggle.min.css" />
        break;
}

<link rel="stylesheet" href="~/_content/JJMasterData.Web/css/bootstrap/bootstrap-tagsinput/bootstrap-tagsinput.css" />
<link rel="stylesheet" href="~/_content/JJMasterData.Web/css/flatpickr/flatpickr.min.css">
<link rel="stylesheet" href="~/_content/JJMasterData.Web/css/flatpickr/airbnb.css">
<link rel="stylesheet" href="~/_content/JJMasterData.Web/css/highlightjs/ssms.min.css" />
<link rel="stylesheet" href="~/_content/JJMasterData.Web/css/dropzone/dropzone.min.css" />
<link asp-append-version="true" rel="Stylesheet" href="~/_content/JJMasterData.Web/css/jjmasterdata.css" />
