@using JJMasterData.Core.Web
@inject IStringLocalizer<JJMasterDataResources> StringLocalizer
@inject IOptions<JJMasterDataWebOptions> Options
@model JJMasterData.Web.Areas.MasterData.Models.InternalRedirectViewModel

@{
    Layout = Options.Value.PopUpLayoutPath;
}

@using (Html.BeginForm())
{
    if (ViewBag.Success == true)
    {
        <script lang="javascript" type="text/javascript">
            DataDictionaryUtils.refreshActionList()
        </script>
    }

    @Html.Raw(Model.HtmlContent)

    if (Model.ShowToolBar)
    {
        <div id="divToolbar">
            <button type="submit" class="btn btn-primary"
                    formaction="@Url.Action("Save", new { parameters = Context.Request.Query["parameters"] })">
                <span class="fa fa-check"></span>
                <span>&nbsp;@StringLocalizer["Save"]</span>
            </button>

            <button type="button" class="@BootstrapHelper.DefaultButton" onclick="window.parent.defaultModal.hide();">
                <span class="fa fa-times"></span>
                <span>&nbsp;@StringLocalizer["Cancel"]</span>
            </button>
        </div>
        <br/>

        @Html.Raw(ViewBag.Error)
    }
}