@using JJMasterData.Web.TagHelpers
@using JJMasterData.BlazorClient.Components.FormElementComponents
@model JJMasterData.Web.Areas.MasterData.Models.FormViewModel

@{
    ViewData["Title"] = $"{Model.DictionaryName}";
    ViewData["EnableBlazor"] = Model.IsBlazor;
}

@if (!Model.IsBlazor)
{
    @using (Html.BeginForm())
    {
        <jj-form-view element-name="@Model.DictionaryName" configure="Model.Configure"/>
    }
}
else
{
    <component type="typeof(MasterDataView)" 
               param-ElementName="@Model.DictionaryName" 
               render-mode="ServerPrerendered"/>
}

