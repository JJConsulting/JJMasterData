@using JJMasterData.Core.Web
@using JJMasterData.Core.Web.Components
@model JJMasterData.Web.Areas.DataDictionary.Models.ViewModels.RelationshipsListViewModel
@inject IStringLocalizer<JJMasterDataResources> StringLocalizer

<script type="text/javascript">
             function deleteRelationship() {
                     return confirm('@StringLocalizer["Are you sure you want to delete this relationship?"]');
                 }
    </script>




<div class="row">
    <div class="col-sm-8">
        @{
            var newRelationLabel = @StringLocalizer["New Relation"];
        }
        <jj-link-button icon="PlusCircle"
                        text="@StringLocalizer["New"]"
                        type="LinkButtonType.Button"
                        on-client-click="popup.show('@newRelationLabel', '@Url.Action("ElementDetails", "Relationships", new { dictionaryName = Model.DictionaryName })');"/>
    </div>
</div>
<br/>

<table id="relationshipsTable" class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">@StringLocalizer["Relation"]</th>
        <th scope="col">@StringLocalizer["Columns"]</th>
        <th scope="col">@StringLocalizer["UpdateOnCascade"]</th>
        <th scope="col">@StringLocalizer["DeleteOnCascade"]</th>
        <th style="width: 100px" scope="col">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Relationships.Any())
    {
        var relationships = Model.Relationships.Where(r => !r.IsParent).ToList();
        foreach (var relationship in relationships)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Index", "Entity", new { dictionaryName = relationship.ElementRelationship!.ChildElement })" target="_blank">@relationship.ElementRelationship!.ChildElement</a>
                </td>
                <td>
                    @foreach (var t in relationship.ElementRelationship!.Columns)
                    {
                        @t.PkColumn
                        <i class="fa-solid fa-arrow-right"></i>
                        @t.FkColumn

                        <br/>
                    }
                </td>
                <td>
                    @relationship.ElementRelationship!.UpdateOnCascade
                </td>
                <td>
                    @relationship.ElementRelationship!.DeleteOnCascade
                </td>
                <td style="text-align: center;">
                    <button type="button" @BootstrapHelper.GetDataToggle("tooltip") title="" class="btn btn-link"
                            onclick="popup.show('@StringLocalizer["Edit Relation"]', '@Url.Action("ElementDetails", "Relationships", new { dictionaryName = Model.DictionaryName, id = relationship.Id })');"
                            data-original-title="@StringLocalizer["Edit"]">
                        <span class="fa fa-pencil"></span>
                    </button>
                    <button type="submit" title="" class="btn btn-link" 
                            onclick="return deleteRelationship();"
                            asp-controller="Relationships"
                            asp-action="Delete"
                            asp-route-dictionaryName="@Model.DictionaryName"
                            asp-route-id="@relationship.Id"
                            data-original-title="@StringLocalizer["Delete"]">
                        <span class="fa fa-trash"></span>
                    </button>
                </td>
            </tr>
        }
    }

    </tbody>
</table>

@if (!Model.Relationships.Any())
{
    <jj-alert color="Default" show-close-button="false">
        @StringLocalizer["No relationships found."]
    </jj-alert>
}