@using JJMasterData.Web.TagHelpers
@model LogViewModel

@inject IOptionsSnapshot<MasterDataWebOptions> Options
@inject IStringLocalizer<MasterDataResources> StringLocalizer

@{
    ViewData["Title"] = StringLocalizer["Log"];
    Layout = Model.IsModal ? Options.Value.ModalLayoutPath : Options.Value.LayoutPath;
}

<style>
    .table th:nth-child(2) {
        width: 85px;
    }
</style>

<master-data-form asp-action="Index" asp-controller="Log" asp-area="DataDictionary" asp-route-isModal="@Model.IsModal">
    @Html.Raw(Model.FormViewHtml)
</master-data-form>