@inject IStringLocalizer<MasterDataResources> StringLocalizer
@inject IOptions<MasterDataWebOptions> Options
@using JJMasterData.Core.UI
@using JJMasterData.Core.UI.Components
@model  JJMasterData.Core.DataDictionary.Models.Actions.FilterAction

@{
    Layout = Options.Value.ModalLayoutPath;
}

@using (Html.BeginForm("FilterAction", "Actions",
    new { elementName = ViewBag.ElementName, context = ViewBag.ContextAction }, FormMethod.Post))
{
    <ul class="nav nav-tabs">
        <li id="nav-general" class="nav-item active"><a class="nav-link active"  @BootstrapHelper.GetDataToggle("tab") href="#div-general">@StringLocalizer["General"]</a></li>
        <li id="navFilterAction" class="nav-item"><a class="nav-link"  @BootstrapHelper.GetDataToggle("tab") href="#divFilterAction">@StringLocalizer["Filter Action"]</a></li>
        <li id="nav-advanced" class="nav-item"><a class="nav-link" @BootstrapHelper.GetDataToggle("tab") href="#div-advanced">@StringLocalizer["Advanced"]</a></li>
    </ul>

    <div class="tab-content" style="margin-top: 20px;">
        <div id="div-general" class="tab-pane fade active @BootstrapHelper.Show">
            <partial name="_NavGeneral" model="Model"/>
        </div>

        <div id="divFilterAction" class="tab-pane fade">
            <div class="row">
                <div class="@BootstrapHelper.FormGroup col-sm-3">
                    <label class="@BootstrapHelper.Label" asp-for="ShowAsCollapse"></label>
                    <checkbox for="ShowAsCollapse" switch="true" switch-size="CheckBoxSwitchSize.Medium"/>
                </div>
                <div class="@BootstrapHelper.FormGroup col-sm-3">
                    <label class="@BootstrapHelper.Label" asp-for="ExpandedByDefault"></label>
                    <checkbox for="ExpandedByDefault" switch="true" switch-size="CheckBoxSwitchSize.Medium"/>
                </div>
                <div class="@BootstrapHelper.FormGroup col-sm-3">
                        <label class="@BootstrapHelper.Label" asp-for="ShowIconAtCollapse"></label>
                        <checkbox for="ShowIconAtCollapse" switch="true" switch-size="CheckBoxSwitchSize.Medium"/>
                </div>
                <div class="col-sm-6">
                    <span class="text-info fa fa-info-circle"></span>
                    <span class="small">
                        <b>@StringLocalizer["View in a collapsed dashboard."]</b><br />
                        @StringLocalizer["When this property is set to yes the filter icon will be removed from the grid"]
                        @StringLocalizer["and a panel with filters will be displayed above the grid."]<br />
                        @StringLocalizer["Filter behavior remains the same."]<br />
                        <br />
                    </span>
                </div>

                <div class="@BootstrapHelper.FormGroup col-sm-3">
                    <label class="@BootstrapHelper.Label" @BootstrapHelper.GetDataToggle("tooltip") data-placement="bottom" title="@StringLocalizer["Enable quick screen search"]">@StringLocalizer["EnableScreenSearch"]</label>
                    <checkbox for="EnableScreenSearch" switch="true" switch-size="CheckBoxSwitchSize.Medium"/>
                </div>
                <div class="@BootstrapHelper.FormGroup col-sm-3">
                </div>
                <div class="col-sm-6">
                    <span class="text-info fa fa-info-circle"></span>
                    <span class="small">
                        <b>@StringLocalizer["Enable quick on - screen search."]</b><br />
                        @StringLocalizer["This search does not query the database, it only looks for records displayed in the grid."]
                        @StringLocalizer["Typically used when grid paging is disabled."]
                        <br />
                    </span>
                </div>
            </div>
        </div>

        <div id="div-advanced" class="tab-pane fade">
            <partial name="_NavGeneral" model="Model"/>
        </div>
    </div>

    @await Html.PartialAsync("_Toolbar")
}

