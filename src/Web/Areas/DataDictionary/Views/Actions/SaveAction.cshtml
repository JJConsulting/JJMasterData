@inject IStringLocalizer<MasterDataResources> StringLocalizer
@inject IOptions<MasterDataWebOptions> Options
@using JJMasterData.Core.UI
@using JJMasterData.Core.UI.Components
@model JJMasterData.Core.DataDictionary.Models.Actions.SaveAction

@{
    Layout = Options.Value.ModalLayoutPath;
}

@using (Html.BeginForm("SaveAction", "Actions",
    new { elementName = ViewBag.ElementName, context = ViewBag.ContextAction }, FormMethod.Post))
{
    <ul class="nav nav-tabs">
        <li id="nav-general" class="nav-item active"><a class="nav-link active" @BootstrapHelper.GetDataToggle("tab") href="#div-general">@StringLocalizer["General"]</a></li>
        <li id="nav-save" class="nav-item"><a class="nav-link" @BootstrapHelper.GetDataToggle("tab") href="#div-save-action">@StringLocalizer["Save Action"]</a></li>
        <li id="nav-advanced" class="nav-item"><a class="nav-link" @BootstrapHelper.GetDataToggle("tab") href="#div-advanced">@StringLocalizer["Advanced"]</a></li>
    </ul>

    <div class="tab-content" style="margin-top: 20px;">
        <div id="div-general" class="tab-pane fade active @BootstrapHelper.Show">
            <partial name="_NavGeneral" model="Model"/>
        </div>
        <div id="div-save-action" class="tab-pane fade">
            <div class="row">
                <div class="@BootstrapHelper.FormGroup col-sm-4 required">
                    <label asp-for="SubmitOnSave" class="@BootstrapHelper.Label"></label>
                    <tooltip title="@StringLocalizer["If true, the entire page will be reloaded after saving the form, else, a AJAX request is made to reload just the current form. If inside a modal, the submit will be executed after the modal is closed."]"/>
                    <checkbox for="SubmitOnSave" switch="true" switch-size="CheckBoxSwitchSize.Medium"/>
                </div>
            </div>
        </div>
        <div id="div-advanced" class="tab-pane fade">
            <partial name="_NavAdvanced" model="Model"/>
        </div>
    </div>

    @await Html.PartialAsync("_Toolbar")
}