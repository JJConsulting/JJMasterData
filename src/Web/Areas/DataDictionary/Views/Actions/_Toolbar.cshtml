
@using JJMasterData.Web.TagHelpers
@using JJMasterData.Core.UI.Components
@inject IStringLocalizer<MasterDataResources> StringLocalizer

<input type="hidden" id="isActionSave" name="isActionSave" value="false" />

<div class="row">
    <div class="col-sm-12">
        @Html.Raw(ViewBag.Error)
    </div>
</div>

<br />
<hr />

<div class="row">
    <div class="col-sm-12">
        <link-button text="Save" color="Primary" icon="Check" on-client-click="$('#isActionSave').val('true');" type="LinkButtonType.Submit"/>
        <link-button text="Cancel" icon="SolidXmark" on-client-click="window.parent.defaultModal.hide();"/>
    </div>
</div>

@if (ViewBag.Success != null && ViewBag.Success)
{
    <script lang="javascript" type="text/javascript">
        requestSubmitParentWindow();
    </script>
}

<br />
<br />