@using Microsoft.AspNetCore.Mvc.TagHelpers
@using JJMasterData.Core.Web
@using JJMasterData.Web.Areas.DataDictionary.Models.ViewModels
@using JJMasterData.Web.TagHelpers

@inject IStringLocalizer<JJMasterDataResources> StringLocalizer

@model EntityViewModel;


@{
    ViewData["Title"] = $"{Model.DictionaryName} - Entity";
}


<partial name="_Menu"/>


@using (Html.BeginForm())
{
    <input asp-for="MenuId" hidden/>
    <div class="row">
        <div class="col-sm-12">
            <button name="action" type="button" onclick="location.href='@Url.Action("Edit", new { dictionaryName = Model.DictionaryName })'" class="@BootstrapHelper.DefaultButton btn-small">
                <span class="fa fa-pencil"></span>
                <span>&nbsp;@StringLocalizer["Edit"]</span>
            </button>
        </div>
    </div>

    <br/>
    
    <jj-collapse-panel  name="dataDictionary" icon="Book" title="@StringLocalizer["Data Dictionary"]" expanded-by-default="true">
        <partial name="_DataDictionaryPanel" model="Model"/>
    </jj-collapse-panel>

    <jj-collapse-panel  name="formPanel" icon="AlignLeft" title="@StringLocalizer["Form"]" expanded-by-default="true">
        <partial name="_FormPanel" model="Model"/>
    </jj-collapse-panel>

    if (Model.FormEvent != null)
    {
        <jj-collapse-panel  name="eventsPanel" icon="Bolt" title="@StringLocalizer["Events"]" expanded-by-default="true">
            <partial name="_EventsPanel" model="Model"/>
        </jj-collapse-panel>
    }
}