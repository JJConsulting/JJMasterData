@inject IStringLocalizer<JJMasterDataResources> StringLocalizer

@using JJMasterData.Core.Web
@model JJMasterData.Web.Areas.DataDictionary.Models.ViewModels.EntityViewModel

<div class="row">
    <div class="@BootstrapHelper.FormGroup col-sm-6 required">
        @Html.LabelFor(model => model.FormElement.Name, StringLocalizer["Dictionary Name"],
        new Dictionary<string, string>
        {
            { BootstrapHelper.DataToggle, "tooltip" },
            { "title", StringLocalizer["Dictionary Name"] }
        })
        @Html.TextBoxFor((model=> model.FormElement.Name), Model.HtmlAttributes)
        
    </div>
    <div class="@BootstrapHelper.FormGroup col-sm-6 required">
       @Html.LabelFor(model => model.FormElement.TableName, StringLocalizer["Table Name"],
        new Dictionary<string, string>
        {
            { BootstrapHelper.DataToggle, "tooltip" },
            { "title", StringLocalizer["Table Name"] }
        })
       @Html.TextBoxFor(model => model.FormElement.TableName, Model.HtmlAttributes)
    </div>
    <div class="@BootstrapHelper.FormGroup col-sm-6">
       @Html.LabelFor(model => model.FormElement.CustomProcNameGet, StringLocalizer["Get Procedure Name"],
        new Dictionary<string, string>
        {
            { BootstrapHelper.DataToggle, "tooltip" },
            { "title", StringLocalizer["Custom name for reading procedure"] }
        })
       @Html.TextBoxFor(model => model.FormElement.CustomProcNameGet, Model.HtmlAttributes)
    </div>
    <div class="@BootstrapHelper.FormGroup col-sm-6 ">
       @Html.LabelFor(model => model.FormElement.CustomProcNameSet, StringLocalizer["Set Procedure Name"],
        new Dictionary<string, string>
        {
            { BootstrapHelper.DataToggle, "tooltip" },
            { "title", StringLocalizer["Custom name for recording procedure"] }
        })
       @Html.TextBoxFor(model => model.FormElement.CustomProcNameSet, Model.HtmlAttributes)
    </div>
</div>