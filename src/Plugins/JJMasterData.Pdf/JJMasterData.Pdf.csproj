<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	  <LangVersion>10</LangVersion>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <Description>JJMasterData Pdf generation support.</Description>
	  <PackageProjectUrl>https://www.github.com/jjconsulting/jjmasterdata</PackageProjectUrl>
	  <PackageIcon>JJMasterData.png</PackageIcon>
	  <PackageTags>pdf,jjmasterdata</PackageTags>
      <Version>1.0.2</Version>
      <Copyright>Â© 2023 JJConsulting. All rights reserved.</Copyright>
      <AssemblyVersion>1.0.2</AssemblyVersion>
      <FileVersion>1.0.2</FileVersion>
      
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="itext7" Version="7.2.3" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\JJMasterData.Core\JJMasterData.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
      <None Include="../../../JJMasterData.png">
          <Pack>True</Pack>
          <PackagePath>\</PackagePath>
      </None>
      <None Remove="../../JJMasterData.png"/>
  </ItemGroup>

    <ItemGroup>
        <None Include="../../../README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Remove="../../README.md"/>
    </ItemGroup>

  <ItemGroup>
    <None Remove="Fonts\fontawesome-webfont.ttf" />
    <EmbeddedResource Include="Fonts\fontawesome-webfont.ttf" />
  </ItemGroup>

</Project>
