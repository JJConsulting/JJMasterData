<input type="hidden" id="isActionSave" name="isActionSave" value="false" />

<div class="row">
    <div class="col-sm-12">
        @Html.Raw(ViewBag.Error)
    </div>
</div>

<br />
<hr />

<div class="row">
    <div class="col-sm-12">
        <button type="submit" class="btn btn-primary" onclick="$('#isActionSave').val('true');">
            <span class="fa fa-check"></span>
            <span>&nbsp;@Translate.Key("Save")</span>
        </button>

        <button type="button" class="@BootstrapHelper.DefaultButton btn-small" onclick="window.parent.popup.hide();">
            <span class="fa fa-times"></span>
            <span>&nbsp;@Translate.Key("Cancel")</span>
        </button>
    </div>
</div>

@if (ViewBag.Success != null && ViewBag.Success)
{
    <script lang="javascript" type="text/javascript">
        window.parent.jjdictionary.refreshAction();
    </script>
}

<br />
<br />