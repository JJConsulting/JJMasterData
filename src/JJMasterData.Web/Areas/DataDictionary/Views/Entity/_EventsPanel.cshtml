@model JJMasterData.Web.Areas.DataDictionary.Models.EntityViewModel

<div class="row">
    <div class="@BootstrapHelper.FormGroup col-sm-6">
        @Html.LabelFor(Model => Model.FormEventType, Translate.Key("Type"),
        new Dictionary<string, string>
        {
            { BootstrapHelper.DataToggle, "tooltip" },
            { "title", Translate.Key("Type") }
        })
        @Html.TextBoxFor((Model => Model.FormEventType),Model.HtmlAttributes)
    </div>
    @if (!Model.IsPythonFormEvent)
    {
        <div class="@BootstrapHelper.FormGroup col-sm-6">
            @Html.LabelFor(Model => Model.FormEventMethods, Translate.Key("Methods"),
                new Dictionary<string, string>
                {
                    { BootstrapHelper.DataToggle, "tooltip" },
                    { "title", Translate.Key("Methods") }
                })
            @Html.TextBoxFor(Model=>Model.FormEventMethods,  Model.HtmlAttributes)
        </div>
    }
</div>