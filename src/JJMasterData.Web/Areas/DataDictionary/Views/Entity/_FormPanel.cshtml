            new Dictionary<string, string>
            {
                { BootstrapHelper.DataToggle, "tooltip" },
                { "title", Translate.Key("Subtitle") }
            })
        @Html.TextBoxFor(Model => Model.FormElement.SubTitle, Model.HtmlAttributes)
    </div>
    <div class="@BootstrapHelper.FormGroup col-sm-12">
        @Html.LabelFor(Model => Model.FormElement.Info, Translate.Key("Info"),
            new Dictionary<string, string>
            {
                { BootstrapHelper.DataToggle, "tooltip" },
                { "title", Translate.Key("Info") }
            })
        @Html.TextBoxFor(Model => Model.FormElement.Info, Model.HtmlAttributes)
    </div>
</div>