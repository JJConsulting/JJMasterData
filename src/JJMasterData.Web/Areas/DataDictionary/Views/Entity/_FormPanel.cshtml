@model EntityViewModel;

<div class="row">
    <div class="@BootstrapHelper.FormGroup col-sm-4 required">
        @Html.LabelFor(Model => Model.FormElement.Title, Translate.Key("Title"),
            new Dictionary<string, string>
            {
                { BootstrapHelper.DataToggle, "tooltip" },
                { "title", Translate.Key("Title") }
            })
