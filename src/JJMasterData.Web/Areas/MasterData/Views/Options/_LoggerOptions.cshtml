@using JJMasterData.Commons.Logging
@model JJMasterData.Web.Areas.MasterData.Models.OptionsViewModel 

<div class="@BootstrapHelper.FormGroup">
    <div class="row">
        <div class="col-sm-3">
            <label asp-for="Options.Logger.WriteInConsole" class="@BootstrapHelper.Label"></label><span class="required-symbol">*</span>
