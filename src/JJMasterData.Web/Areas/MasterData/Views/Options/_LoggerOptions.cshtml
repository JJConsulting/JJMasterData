            <select asp-for="Options.Logger.WriteInEventViewer" asp-items="@Html.GetEnumSelectList<LoggerOption>()" class="form-control">
            </select>
            <span asp-validation-for="Options.Logger.WriteInEventViewer" class="text-danger"></span>
        </div>
    </div>
</div>