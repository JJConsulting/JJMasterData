            </select>
            <span asp-validation-for="Options.Logger.WriteInDatabase" class="text-danger"></span>
        </div>
        <div class="col-sm-3">
            <label asp-for="Options.Logger.WriteInFile" class="@BootstrapHelper.Label"></label><span class="required-symbol">*</span>
            <select asp-for="Options.Logger.WriteInFile" asp-items="@Html.GetEnumSelectList<LoggerOption>()" class="form-control">
            </select>
            <span asp-validation-for="Options.Logger.WriteInFile" class="text-danger"></span>
        </div>
        <div class="col-sm-3">
            <label asp-for="Options.Logger.WriteInTrace" class="@BootstrapHelper.Label"></label><span class="required-symbol">*</span>
            <select asp-for="Options.Logger.WriteInTrace" asp-items="@Html.GetEnumSelectList<LoggerOption>()" class="form-control">
            </select>
            <span asp-validation-for="Options.Logger.WriteInTrace" class="text-danger"></span>
